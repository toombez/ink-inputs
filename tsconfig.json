{
    "extends": "@sindresorhus/tsconfig",
    "compilerOptions": {
        "module": "ES2020",
        "jsx": "react",
        "esModuleInterop": true,
        "outDir": "lib",
        "typeRoots": ["./node_modules/@types"],
        "moduleResolution": "node16",

        "allowUnusedLabels": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
    },
    "include": ["src"]
}
