{
    "extends": "@sindresorhus/tsconfig",
    "compilerOptions": {
        "moduleResolution": "node16",
        "module": "Node16",
        "esModuleInterop": true,
        "outDir": "lib",
        "sourceMap": true,
        "jsx": "react",

        "allowUnusedLabels": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
    },
    "include": ["src"],
    "ts-node": {
        "transpileOnly": true,
        "files": true,
        "experimentalResolver": true,
        "experimentalSpecifierResolution": "node",
    }
}
